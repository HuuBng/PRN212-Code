<Window x:Class="Group4WPF.Views.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer Home" Height="250" Width="300">
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
            <Button Content="Manage My Profile" Margin="0,0,0,10" Click="ManageProfileButton_Click"/>
            <Button Content="View Booking History" Width="193" Margin="5" Click="ViewBookingButton_Click"/>

            <Button Content="Logout" Width="118" Margin="40,50,0,0" HorizontalAlignment="Left"
                     Click="Logout_Click" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
